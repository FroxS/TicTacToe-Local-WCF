<UserControl x:Class="TicTacToe.View.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicTacToe.View"
             mc:Ignorable="d" 
             Background="Gray" 
             MinWidth="500"
             MinHeight="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
            <TextBox x:Name="UserName" Width="200"
                     Margin="10"/>
            <Button x:Name="LoginBtn" Content="Login"
                    Click="LoginBtn_Click"/>

            <Button x:Name="RunServerBtn" Content="RunServer"
                    Click="RunServerBtn_Click"/>
        </StackPanel> 
    </Grid>
</UserControl>
